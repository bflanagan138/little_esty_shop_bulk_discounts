<%= form_with url: path, method: method, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :value => @edit_discount.name %>
<br>
  <%= f.label :minimum_quantity %>
  <%= f.text_field :minimum_quantity, :value => @edit_discount.minimum_quantity %>
<br>
  <%= f.label :percent_off %>
  <%= f.number_field :percent_off, :value => @edit_discount.percent_off %>
<br>
  <%= f.submit %>
<% end %>